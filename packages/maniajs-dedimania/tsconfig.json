{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "classic",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "./lib"
    },
    "exclude": [
        "node_modules",
        "./typings/*/**.d.ts"
    ],
    "filesGlob": [
        "./src/**/*.ts",
        "./src/*.ts",
        "./test/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "resolveGlobs": true,
        "forkChecker": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    },
    "files": [
        "src/logic/DedimaniaClient.ts",
        "src/logic/Widget.ts",
        "src/plugin.ts"
    ]
}